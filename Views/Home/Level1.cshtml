                {
                    <tr>
                        <td>@l.Location</td>
                        <td>@l.TeamName</td>
                        <td>@l.TeamId</td>
                    </tr>
                }
            </table>
        </div>
        <li>...all teams, ordered by team name in reverse alphabetical order</li>
        <div>
            <h3>All Teams: Reverse Alphabetically by Team Name</h3>
            <table class="table table-striped">
                <tr>
                    <th>Team Location</th>
                    <th>Team Name</th>
                    <th>Team ID#</th>
                </tr>
                @foreach(var l in ViewBag.AllTeamsReverseOrderByTeamName)
                {
                    <tr>
                        <td>@l.Location</td>
                        <td>@l.TeamName</td>
                        <td>@l.TeamId</td>
                    </tr>
                }
            </table>
        </div>
        <li>...every player with last name "Cooper"</li>
        <div>
            <h3>Players with Last Name Cooper</h3>
            <table class="table table-striped">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Team ID#</th>
                </tr>
                @foreach(var l in ViewBag.CooperPlayers)
                {
                    <tr>
                        <td>@l.FirstName</td>
                        <td>@l.LastName</td>
                        <td>@l.TeamId</td>
                    </tr>
                }
            </table>
        </div>
        <li>...every player with first name "Joshua"</li>
        <div>
            <h3>Players with First Name Joshua</h3>
            <table class="table table-striped">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Team ID#</th>
                </tr>
                @foreach(var l in ViewBag.JoshuaPlayers)
                {
                    <tr>
                        <td>@l.FirstName</td>
                        <td>@l.LastName</td>
                        <td>@l.TeamId</td>
                    </tr>
                }
            </table>
        </div>
        <li>...every player with last name "Cooper" EXCEPT those with "Joshua" as the first name</li>
        <div>
            <h3>Players with Last Name Cooper, but NOT First Name Joshua</h3>
            <table class="table table-striped">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Team ID#</th>
                </tr>
                @foreach(var l in ViewBag.CooperNotJoshuaPlayers)
                {
